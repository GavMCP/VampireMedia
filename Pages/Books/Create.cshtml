@page
@model VampireMedia.Pages.Books.CreateModel

@{
    ViewData["Title"] = "Create Book";
}

<h1>Create new Vampire Book Record</h1>

<h3>Book Details</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
